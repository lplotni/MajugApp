<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.layout {
			margin: 0 auto;
			width: 1024px;
			border-right: 1px solid grey;
			border-left: 1px solid grey;
		}
		.header{
			padding-top: 20px;
			margin: 0 auto;
			width: 650px;
		}
		.text{
			font-size: 20px;
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.layout}">
		<g:HorizontalPanel styleName="{style.header}">
		<g:Label styleName="{style.text}">Participant name:</g:Label>
		<g:TextBox ui:field="person"/>
		<g:Button ui:field="add">Add</g:Button>
		<g:Button ui:field="addMega">Mega add</g:Button>
		<g:Button ui:field="draw">Show the winner</g:Button>
		</g:HorizontalPanel>
		<g:AbsolutePanel ui:field="participantPanel" width="100%" height="90%"></g:AbsolutePanel>
	</g:HTMLPanel>
</ui:UiBinder> 